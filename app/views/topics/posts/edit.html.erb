<div class="container">
  <div class="new">
    <% breadcrumb :edit %>
    <%= form_tag(topic_post_path(@topic, @post), method: :patch) do |f| %>
      <div class="d-flex justify-content-center" style="padding: 20px;">
        <%= text_area_tag :body, @post.body, size: "60x3" %>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary btn-sm">更新</button>
      </div>
    <% end %>
    <div class="d-flex justify-content-center" style="padding: 20px;">
      <a href="http://localhost:3000/">◆トピック一覧に戻る◆</a>
    </div>
    <% @post.errors.full_messages.each do |message| %>
      <%= message%>
    <%end%>
  </div>
</div>
