<div class="container">
  <% breadcrumb :new %>
  <div class="new">
    <h2>トピック新規作成</h2>
    <%= form_for @topic, :url => {:action => 'create'} do |f| %>
      <div class="d-flex justify-content-center" style="padding: 20px;">
        <%= f.text_field :title, :size =>"28px" %>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-outline-primary btn-sm">トピックを立てる</button>
      </div>
    <% end %>
    <div class="d-flex justify-content-center" style="padding: 20px;">
        <a href="http://localhost:3000/">◆トピック一覧に戻る◆</a>
    </div>
  </div>
</div>
