<% breadcrumb :post %>
<h1><%= @topic.title %></h1>
<% @posts.each_with_index do |post , idx | %>
  <div id="<%= post.sub_id %>">
    <%= "[#{post.sub_id}] [#{post.name}] #{post.user_id ? "ID:#{post.user_id}" : ""}" %>
    <%= link_to "編集", edit_topic_post_path(@topic, post)%>
    <div>
      <%= cnv_anchor(post.body).html_safe %>
      <a>
    </div>
    <div><%= post.created_at.to_s(:datetime) %></div>
    <%= button_to 'いいね', topic_post_likes_path(@topic,post) %>
    <%= flash[:notice] %>
    <%= post.likes.count %>
  </div>
<% end %>
<h3>新規書き込み</h3>
<%= form_for @newpost, :url => topic_posts_path(@topic), method: :post do |f| %>
  <p>お名前</p>
  <p><%= f.text_field :name %></p>
  <p>本文</p>
  <p><%= f.text_area :body %></p>
  <%= f.hidden_field :topic_id %>
  <%= f.submit %>
<% end %>
<%= link_to 'http://localhost:3000/' do %>
  <button class="btn btn-primary">Topics</button>
<% end %>

<%= link_to :back do %>
  <button class="btn btn-primary">戻る</button>
<% end %>

<%= will_paginate @posts %>
